<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  DirectoryIndex index.html
  Options -MultiViews

  # DIAGNOSTIC MODE: SPA Fallback is DISABLED.
  # This ensures that if a file is missing, you get a 404 from the server,
  # NOT a white screen from the App.

  # 1. Force Trailing Slash
  RewriteRule ^(lavadora|lavadora2|motoserra|motoserra2)$ /$1/ [R=301,L]
</IfModule>
